{
  "name": "NFLArbitrageApp",
  "version": "1.0.0",
  "description": "NFL Arbitrage Betting Calculator for Polymarket and Kalshi",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "ios": "expo start --ios",
    "android": "expo start --android",
    "web": "expo start --web",
    "eject": "expo eject",
    "test": "jest",
    "build:ios": "expo build:ios",
    "build:android": "expo build:android"
  },
  "dependencies": {
    "expo": "~49.0.0",
    "expo-haptics": "~12.4.0",
    "expo-linear-gradient": "~12.3.0",
    "expo-notifications": "~0.20.1",
    "expo-status-bar": "~1.6.0",
    "expo-linking": "~5.0.2",
    "react": "18.2.0",
    "react-native": "0.72.6",
    "@react-native-async-storage/async-storage": "1.18.2",
    "react-native-safe-area-context": "4.6.3",
    "expo-constants": "~14.4.2",
    "expo-device": "~5.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@types/react": "~18.2.14",
    "@types/react-native": "~0.72.0",
    "typescript": "^5.1.3",
    "jest": "^29.2.1",
    "@testing-library/react-native": "^12.1.2"
  },
  "private": true,
  "expo": {
    "name": "NFL Arbitrage",
    "slug": "nfl-arbitrage",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#111827"
    },
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.nflarbitrage",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This app uses tracking to improve your experience."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#111827"
      },
      "package": "com.yourcompany.nflarbitrage"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "notification": {
      "icon": "./assets/notification-icon.png",
      "color": "#10B981",
      "androidMode": "default"
    }
  }
}